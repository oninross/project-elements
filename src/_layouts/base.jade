  if !isTablePreview
    header.header
      +primary-nav

  if isTablePreview
    block content
  else
    main#main
      block content

  block scripts
    script(src= baseUrl + 'assets/elements/js/main.js')

    script(id='element-cell', type='text/template')
      | {{? it.ind == 56 || it.ind == 74 }}
      .element(class='{{= it.class }}')
        +elementContent()
      | {{??}}
      button.element(class='{{= it.class }}').js-open-element
        +elementContent()
      | {{?}}

    script(id='element-template', type='text/template')
      .no-animation(class='{{= it.class }}')
        button.js-close-element
          i.icon.icon-cross
        +elementContent()

    if !isTablePreview
      script(id='toaster-template', type='text/template')
        .toaster(class='toaster{{= it.ind }}')
          .container
            p {{! it.message}}
            button.js-dismiss
              span.vh Close
              i.icon.icon-cross

