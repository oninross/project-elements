mixin elementContent()
  .element--num {{! it.num }}
  .element--sym {{! it.sym }}
  .element--name {{! it.name }}
  .element--details
    hr
    table
      | {{? it.discovery && it.discovery != undefined }}
      tr
        td
          strong
            |Discovery:
        td
          .element--discovery {{! it.discovery }}
      | {{?}}

      | {{? it.configuration && it.configuration != undefined }}
      tr
        td
          strong
            |Electron configuration:
        td
          .element--configuration {{= it.configuration }}
      | {{?}}

      | {{? it.weight && it.weight != undefined }}
      tr
        td
          strong
            |Atomic weight:
        td
          .element--weight {{! it.weight }}
      | {{?}}

      | {{? it.density && it.density != undefined }}
      tr
        td
          strong
            |Density:
        td
          .element--density {{! it.density }}
      | {{?}}

      | {{? it.boiling && it.boiling != undefined }}
      tr
        td
          strong
            |Boiling point:
        td
          .element--boiling {{! it.boiling }}
      | {{?}}

      | {{? it.melting && it.melting != undefined }}
      tr
        td
          strong
            |Melting point:
        td
          .element--melting {{! it.melting }}
      | {{?}}

      | {{? it.ionization && it.ionization != undefined }}
      tr
        td
          strong
            | Ionization Energy:
        td
          .element--ionization {{! it.ionization }}
      | {{?}}

mixin element(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  div(class=spec.__class)&attributes(attributes)
    p This is an example paragraph for the element module
